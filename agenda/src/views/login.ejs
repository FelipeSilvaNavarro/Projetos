<!-- Inclui o cabeçalho do site -->
<%- include('includes/head') %>

<!-- Inclui a barra de navegação do site -->
<%- include('includes/nav') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou entrar</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
            <!-- Inclui mensagens flash, se houver -->
            <%- include('includes/messages') %>
            <!-- TODO: Arrumar este erro c:\Users\felip\Pictures\erroEmQualquerBotao.jpg -->
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-3 text-center">
            <h4>Faça seu cadastro</h4>
            <!-- Formulário para criar uma nova conta -->
            <form class="form-cadastro" action="/login/register" method="post">
                <!-- Token CSRF para segurança -->
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                    <label>Seu email</label>
                    <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Sua senha</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar minha conta</button>
            </form>
        </div>
        <div class="col-lg-3 text-center">
            <h4>Entrar</h4>
            <!-- Formulário para login existente -->
            <form class="form-login" action="/login/login" method="post">
                <!-- Token CSRF para segurança -->
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                    <label>Seu email</label>
                    <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Sua senha</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
        </div>
    </div>
</div>

<!-- Inclui o rodapé do site -->
<%- include('includes/footer') %>
